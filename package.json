{
  "name": "telegram-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Telegram Bot API integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:app && npm run build:api",
    "build:app": "tsc",
    "build:api": "tsc --project tsconfig.api.json",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "mcp",
    "telegram",
    "bot",
    "mcp-server"
  ],
  "author": "Street Foundation",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "node-telegram-bot-api": "^0.66.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-telegram-bot-api": "^0.64.7",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
